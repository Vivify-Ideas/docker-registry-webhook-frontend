{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "lib": ["es5", "es2015", "dom", "scripthost"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
